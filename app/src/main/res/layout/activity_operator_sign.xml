<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sign.OperatorSignActivity">

    <include layout="@layout/view_head"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作员号码："
        android:textColor="@color/color_484D5E"
        android:textSize="@dimen/font_size_18"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_40" />

    <EditText
        android:id="@+id/et_operator_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入操作员号码"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/color_484D5E"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginRight="@dimen/widget_size_20"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作员密码："
        android:textColor="@color/color_484D5E"
        android:textSize="@dimen/font_size_18"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_30" />


    <EditText
        android:id="@+id/et_operator_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入操作员密码"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/color_484D5E"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginRight="@dimen/widget_size_20"/>




    <Button
        android:id="@+id/btn_operator_signIn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_50"
        android:background="@drawable/btn_fillet"
        android:text="签到"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/widget_size_40"
        android:layout_marginLeft="@dimen/widget_size_80"
        android:layout_marginRight="@dimen/widget_size_80"/>



</LinearLayout>